{
  "name": "boring-vault",
  "version": "1.0.0",
  "description": "Boring Vault deployment with Hardhat",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deployInfra:fuse": "hardhat run scripts/deploy-fuse-infrastructure.js --network fuse",
    "grant:eth": "npx hardhat run scripts/grantRolesToFuseTeller.js --network mainnet",
    "setTrusted:eth": "npx hardhat run scripts/setTrustedRemoteEth.js --network mainnet",
    "setTrusted:fuse": "npx hardhat run scripts/setTrustedRemoteFuse.js --network fuse",
    "deployRate:eth": "npx hardhat run scripts/deploy-rate-sender-eth.js --network mainnet",
    "deployRate:fuse": "npx hardhat run scripts/deploy-rate-receiver-fuse.js --network fuse"
  },
  "dependencies": {
    "@layerzerolabs/lz-evm-oapp-v2": "^3.0.84",
    "@layerzerolabs/lz-evm-protocol-v2": "^3.0.84",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat-preprocessor": "^0.1.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@openzeppelin/hardhat-upgrades": "^1.22.1",
    "hardhat": "^2.17.0"
  }
}
